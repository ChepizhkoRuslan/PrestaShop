<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_presta"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/presta_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="262dp"
        android:singleLine="true"
        android:text="name"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/presta_image"
        android:layout_width="210dp"
        android:layout_height="240dp"
        android:background="#DCDACF"
        />

    <TextView
        android:id="@+id/presta_reference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="40dp"
        android:text="reference"
        android:textSize="15sp"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/presta_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/presta_reference"
        android:layout_marginTop="94dp"
        android:text="price"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/presta_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/presta_name"
        android:layout_marginTop="300dp"
        android:text="description"
        android:textSize="15sp"/>

</RelativeLayout>
